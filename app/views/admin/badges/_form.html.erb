<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>
  <p>
    <%= form.label :title %>
    <%= form.text_field :title, id: :badge_title %>
  </p><br>
    <p>
    <%= form.label :rule %>
    <%= form.text_field :rule, id: :badge_rule %>
  </p><br>
    <p>
    <%= form.label :img %>
    <%= form.text_field :img, id: :badge_img %>
  </p><br>
  
  
  
  <p><%= form.submit %></p>
<% end %>