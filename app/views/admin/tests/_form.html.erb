<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>
  <div class="container col-12 col-md-4 mt-5">
<div class="form-group">
<div class="form-control bg-light"> 
  <p>
    <%= form.label :title %>
    <%= form.text_field :title, id: :test_title %>
  </p><br>
  
  <p>
    <%= form.label :level %>
    <%= form.text_field :level, id: :test_level %>
  </p><br>
  
  <p>
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: t('.prompt') %>
  </p><br>

  <p>
    <%= form.label :author %></br>
    <%= form.text_field :author, value: current_user.first_name, readonly: true %>
  </p>

  <p>
    <%= form.label :time %></br>
    <%= form.number_field :time, id: :test_time %>
  </p>
</div>
</div>

  <p><%= form.submit class: "btn btn-success form-control" %></p>
<% end %>
</div>
