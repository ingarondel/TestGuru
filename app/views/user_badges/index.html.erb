<div>
  <strong>My badges</strong>
  <% @user_badges.each do |user_badge| %>
    <p>
      <%= user_badge.title %>
      <%= image_tag user_badge.image, width: 50, height: 50 %>
    </p>
  <% end %>
</div>

<div>
  <strong>All badges</strong>
  <% @badges.each do |badge| %>
    <p>
      <%= badge.title %>
      <%= image_tag badge.img, width: 50, height: 50 %>
    </p>
  <% end %>
</div>